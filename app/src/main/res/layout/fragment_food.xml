<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".FoodFragment" android:id="@+id/frameLayout4">
    <TextView
            android:text="Schermata Cibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_WelcomeFood" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="44dp" android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.067" android:textStyle="bold" android:textAllCaps="false"
            android:textColor="@android:color/black"/>
    <Switch
            android:text="8:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Sw8"
            app:layout_constraintTop_toBottomOf="@+id/txt_Schedule"
            app:layout_constraintBottom_toTopOf="@+id/Sw1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="49dp"/>
    <Switch
            android:text="13:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Sw1" app:layout_constraintTop_toBottomOf="@+id/Sw8"
            app:layout_constraintBottom_toTopOf="@+id/Sw17" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="49dp"/>
    <Switch
            android:text="17:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Sw17" app:layout_constraintTop_toBottomOf="@+id/Sw1"
            app:layout_constraintBottom_toTopOf="@+id/Sw" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="49dp"/>
    <Switch
            android:text="20:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Sw"
            app:layout_constraintTop_toBottomOf="@+id/Sw17" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="250dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="48dp"/>
    <TextView
            android:text="Schedula il cibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_Schedule" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_WelcomeFood" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.062" android:textSize="18sp"/>
</android.support.constraint.ConstraintLayout>