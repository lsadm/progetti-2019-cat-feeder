<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".FoodFragment" android:id="@+id/frameLayout4">
    <TextView
            android:text="Schermata Cibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_WelcomeFood" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="44dp" android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.067" android:textStyle="bold" android:textAllCaps="false"
            android:textColor="@android:color/black"/>
    <Switch
            android:text="  8:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sw1"
            app:layout_constraintTop_toBottomOf="@+id/txt_Schedule"
            app:layout_constraintBottom_toTopOf="@+id/sw2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="49dp" android:switchTextAppearance="@style/TextAppearance.AppCompat"
            android:switchPadding="10dp"/>
    <Switch
            android:text="13:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sw2" app:layout_constraintTop_toBottomOf="@+id/sw1"
            app:layout_constraintBottom_toTopOf="@+id/sw3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="49dp" android:switchPadding="10dp"/>
    <Switch
            android:text="17:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sw3" app:layout_constraintTop_toBottomOf="@+id/sw2"
            app:layout_constraintBottom_toTopOf="@+id/sw4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="49dp" android:switchPadding="10dp"/>
    <Switch
            android:text="20:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sw4"
            app:layout_constraintTop_toBottomOf="@+id/sw3" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="250dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="49dp" android:switchPadding="10dp"/>
    <TextView
            android:text="Schedula il cibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_Schedule" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_WelcomeFood" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.062" android:textSize="18sp"/>
    <SeekBar
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="86dp"
            android:layout_height="18dp"
            android:max="5"
            android:progress="1"
            android:id="@+id/seekBar"
            app:layout_constraintBottom_toTopOf="@+id/seekBar2"
            app:layout_constraintTop_toBottomOf="@+id/txt_Schedule" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="124dp"/>
    <SeekBar
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="86dp"
            android:layout_height="18dp"
            android:max="5"
            android:progress="1"
            android:id="@+id/seekBar2"
            app:layout_constraintTop_toBottomOf="@+id/seekBar"
            app:layout_constraintBottom_toTopOf="@+id/seekBar3" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="124dp" app:layout_constraintStart_toStartOf="@+id/seekBar"
    />
    <SeekBar
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="86dp"
            android:layout_height="18dp"
            android:max="5"
            android:progress="1"
            android:id="@+id/seekBar3"
            app:layout_constraintTop_toBottomOf="@+id/seekBar2" app:layout_constraintBottom_toTopOf="@+id/seekBar4"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="124dp"
            app:layout_constraintStart_toStartOf="@+id/seekBar2"/>
    <SeekBar
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="86dp"
            android:layout_height="18dp"
            android:max="5"
            android:progress="1"
            android:id="@+id/seekBar4"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/seekBar3"
            android:layout_marginBottom="250dp" android:layout_marginEnd="124dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="@+id/seekBar3"/>
</android.support.constraint.ConstraintLayout>