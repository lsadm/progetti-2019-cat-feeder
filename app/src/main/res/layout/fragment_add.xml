<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".AddFragment" android:id="@+id/frameLayout3">


    <TextView
            android:text="Aggiungi nuovo animale:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textSize="24sp" android:textColor="#6B6B6B"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/guideline2"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline3"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="@+id/guideline4"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/ProfilePic" app:layout_constraintStart_toStartOf="@+id/guideline2"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toStartOf="@+id/btn_fotocamera"
            android:layout_marginEnd="16dp" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline5" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6" app:srcCompat="@drawable/avatar_default"/>
    <Button android:layout_width="117dp" android:layout_height="56dp"
            android:id="@+id/btn_fotocamera"
            android:text="Aggiungi foto"


            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/ProfilePic"
            app:layout_constraintTop_toTopOf="@+id/ProfilePic"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_nome"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView8"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toEndOf="@+id/textView8" android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="0.238"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/txt_eta"
            app:layout_constraintStart_toStartOf="@+id/txt_nome" app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView9"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/txt_peso"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView10"
            app:layout_constraintStart_toStartOf="@+id/txt_eta" app:layout_constraintEnd_toStartOf="@+id/guideline3"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_razza"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView14"
            app:layout_constraintStart_toStartOf="@+id/txt_nome" app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintHorizontal_bias="1.0"/>

    <TextView
            android:text="Nome:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            app:layout_constraintStart_toStartOf="@+id/guideline2" android:layout_marginStart="24dp"
            app:layout_constraintBottom_toTopOf="@+id/textView9"
            app:layout_constraintTop_toTopOf="@+id/guideline5"/>
    <TextView
            android:text="EtÃ :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            app:layout_constraintStart_toStartOf="@+id/guideline2" android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8" app:layout_constraintBottom_toTopOf="@+id/textView10"/>
    <TextView
            android:text="Peso:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            app:layout_constraintBottom_toTopOf="@+id/textView14"/>
    <CheckBox
            android:text="Sterilizzato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/check_sterile"
            app:layout_constraintStart_toEndOf="@+id/check_vaccino"
            app:layout_constraintEnd_toStartOf="@+id/guideline3" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.752"
            app:layout_constraintTop_toTopOf="@+id/check_vaccino"
            app:layout_constraintBottom_toBottomOf="@+id/check_vaccino"/>
    <TextView
            android:text="Razza: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            app:layout_constraintStart_toStartOf="@+id/guideline2" android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            app:layout_constraintBottom_toTopOf="@+id/textView7"/>
    <TextView
            android:text="Sesso: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            app:layout_constraintStart_toStartOf="@+id/guideline2" android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView14"
            app:layout_constraintBottom_toTopOf="@+id/check_vaccino"/>
    <CheckBox
            android:text="Vaccinato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/check_vaccino"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            android:layout_marginStart="28dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            app:layout_constraintBottom_toTopOf="@+id/guideline10"/>
    <android.support.design.widget.FloatingActionButton
            android:src="@drawable/ic_check_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:id="@+id/btn_aggiungi" app:backgroundTint="@color/colorPrimary"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="48dp" app:layout_constraintEnd_toEndOf="parent"
    />
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline2"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.10"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline3"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.9"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline4"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent="0.02"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline5" app:layout_constraintGuide_begin="255dp"
                                          android:orientation="horizontal"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline10"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent="0.88"/>
    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:id="@+id/spinner"
            app:layout_constraintTop_toTopOf="@+id/textView7" app:layout_constraintStart_toStartOf="@+id/txt_razza"
            app:layout_constraintBottom_toBottomOf="@+id/textView7"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerResult"
            android:text="Usato Per Debug"
            app:layout_constraintStart_toEndOf="@+id/spinner"
            android:layout_marginStart="24dp" app:layout_constraintTop_toTopOf="@+id/spinner"
            app:layout_constraintBottom_toBottomOf="@+id/spinner" android:visibility="invisible"/>
</android.support.constraint.ConstraintLayout>