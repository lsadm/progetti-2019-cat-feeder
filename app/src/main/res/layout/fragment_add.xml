<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".AddFragment" android:id="@+id/frameLayout3">
    <TextView
            android:text="Aggiungi nuovo Animale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textSize="24sp" android:textColor="@android:color/black"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/guideline2"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline3"
            android:layout_marginTop="20dp" app:layout_constraintTop_toTopOf="@+id/guideline4"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:src="@tools:sample/avatars[2]"
            android:id="@+id/imageView5"
            app:layout_constraintStart_toStartOf="@+id/guideline2" android:layout_marginStart="12dp"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/textView6"/>
    <TextView
            android:text="Aggiungi nuova foto:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7" android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline3" app:layout_constraintStart_toEndOf="@+id/imageView5"
            android:layout_marginStart="8dp" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6" app:layout_constraintHorizontal_bias="0.23"/>
    <ImageButton
            android:src="@android:drawable/ic_menu_camera"
            android:layout_width="wrap_content"
            android:layout_height="51dp"
            android:id="@+id/btn_foto" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7" app:layout_constraintStart_toEndOf="@+id/imageView5"
            android:layout_marginStart="72dp" app:layout_constraintEnd_toStartOf="@+id/guideline3"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0"
    />
    <TextView
            android:text="Nome:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8" android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView9"
            app:layout_constraintStart_toStartOf="@+id/guideline2" android:layout_marginStart="22dp"
            app:layout_constraintTop_toTopOf="@+id/guideline5"/>
    <TextView
            android:text="EtÃ :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/textView8" app:layout_constraintBottom_toTopOf="@+id/textView10"
            app:layout_constraintStart_toStartOf="@+id/guideline2" android:layout_marginStart="22dp"/>
    <TextView
            android:text="Peso:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            app:layout_constraintBottom_toTopOf="@+id/textView14" app:layout_constraintStart_toStartOf="@+id/guideline2"
            android:layout_marginStart="22dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_nome"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView8"
            app:layout_constraintEnd_toStartOf="@+id/guideline3" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/textView8" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.238"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_eta"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView9"
            app:layout_constraintEnd_toStartOf="@+id/guideline3" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/textView9" android:layout_marginStart="27dp"
            app:layout_constraintHorizontal_bias="0.215"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_peso"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView10"
            app:layout_constraintStart_toEndOf="@+id/textView10" android:layout_marginStart="27dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline3" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <CheckBox
            android:text="Vaccinato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/check_vaccino"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView14"
            android:layout_marginBottom="64dp"
            app:layout_constraintStart_toStartOf="@+id/guideline2" android:layout_marginStart="24dp"/>
    <CheckBox
            android:text="Sterilizzato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/check_sterile"
            app:layout_constraintTop_toTopOf="@+id/check_vaccino"
            app:layout_constraintStart_toEndOf="@+id/check_vaccino"
            app:layout_constraintEnd_toStartOf="@+id/guideline3" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Razza: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            app:layout_constraintBottom_toTopOf="@+id/check_vaccino"
            app:layout_constraintStart_toStartOf="@+id/guideline2" android:layout_marginStart="22dp"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_razza"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView14"
            app:layout_constraintEnd_toStartOf="@+id/guideline3" android:layout_marginEnd="33dp"
            app:layout_constraintStart_toEndOf="@+id/textView14" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="1.0"/>
    <android.support.design.widget.FloatingActionButton
            android:src="@drawable/ic_check_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:id="@+id/floatingActionButton2" app:backgroundTint="@color/colorPrimary"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline2"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.10"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline3"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.9"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline4"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent="0.02"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline5" app:layout_constraintGuide_begin="255dp"
                                          android:orientation="horizontal"/>
</android.support.constraint.ConstraintLayout>