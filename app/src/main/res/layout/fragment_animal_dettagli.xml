<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent" android:id="@+id/frame_dettagli">

    <TextView
            android:text="Età:"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:id="@+id/textView17"
            app:layout_constraintStart_toStartOf="@+id/guideline" android:layout_marginStart="12dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="@+id/guideline6"/>
    <TextView
            android:text="Peso :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView18"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginStart="12dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView17"/>
    <TextView
            android:text="Razza :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView19" app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginStart="12dp" app:layout_constraintTop_toBottomOf="@+id/textView18"
            android:layout_marginTop="20dp"/>
    <TextView
            android:text="Sesso :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11" app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/textView19"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline" app:layout_constraintGuide_begin="33dp"
                                          android:orientation="vertical"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline6" app:layout_constraintGuide_begin="161dp"
                                          android:orientation="horizontal"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline7" app:layout_constraintGuide_begin="329dp"
                                          android:orientation="horizontal"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline8" app:layout_constraintGuide_begin="371dp"
                                          android:orientation="vertical"/>
    <TextView
            android:text="KRATOS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_nome_dett"
            app:layout_constraintEnd_toStartOf="@+id/guideline8"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="36sp" android:textStyle="bold"
            android:textAlignment="center" android:layout_marginTop="52dp" app:layout_constraintTop_toTopOf="parent"
            android:lineSpacingExtra="8sp" app:layout_constraintHorizontal_bias="0.893"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_età_dett" app:layout_constraintEnd_toStartOf="@+id/guideline8"
            android:layout_marginEnd="168dp"
            app:layout_constraintStart_toEndOf="@+id/textView17" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.388"
            app:layout_constraintBottom_toBottomOf="@+id/textView17"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_peso_dett" app:layout_constraintEnd_toStartOf="@+id/guideline8"
            android:layout_marginEnd="168dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView18"
            app:layout_constraintStart_toEndOf="@+id/textView18" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.226"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:id="@+id/txt_sessi_dett" app:layout_constraintEnd_toStartOf="@+id/guideline8"
            android:layout_marginEnd="204dp"
            app:layout_constraintStart_toEndOf="@+id/textView11"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView11"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:id="@+id/txt_razza_dett2" app:layout_constraintEnd_toStartOf="@+id/guideline8"
            android:layout_marginEnd="168dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView19"
            app:layout_constraintStart_toEndOf="@+id/textView19" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.127"/>
    <CheckedTextView
            android:text=" Vaccinato :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/check_vaccin_dett" app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginStart="12dp"
            android:checkMarkTint="@color/colorPrimary" android:checked="true" android:clickable="false"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="@+id/guideline7"/>
    <CheckedTextView
            android:text="Sterilizzato :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/check_steril_dett"
            android:layout_marginStart="12dp" app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/check_vaccin_dett"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_vacc_dett"
            app:layout_constraintBottom_toBottomOf="@+id/check_vaccin_dett"
            app:layout_constraintEnd_toStartOf="@+id/guideline8" android:layout_marginEnd="180dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_steril_dett"
            app:layout_constraintBottom_toBottomOf="@+id/check_steril_dett"
            app:layout_constraintEnd_toStartOf="@+id/guideline8" android:layout_marginEnd="180dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" tools:srcCompat="@tools:sample/avatars[6]"
            android:id="@+id/imageView2" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toStartOf="@+id/txt_nome_dett"
            android:layout_marginEnd="32dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline6"/>
    <Button
            android:text="Rimuovi Animale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline8"
            android:layout_marginEnd="8dp" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent" android:backgroundTint="#F44336"
            android:textColor="#FFFFFF"/>
</android.support.constraint.ConstraintLayout>