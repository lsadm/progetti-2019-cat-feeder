<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".HomeFragment" android:id="@+id/frameLayout"
android:background="@drawable/back2">
    <android.support.design.widget.FloatingActionButton
            android:src="@drawable/ic_add_black_24dp"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:clickable="true"
            android:id="@+id/btn_add" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:backgroundTint="@color/design_default_color_primary"
    />
    <android.support.v7.widget.RecyclerView
            android:layout_width="330dp"
            android:orientation="horizontal"

            android:layout_height="466dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="128dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/lista_animali" tools:listitem="@layout/elemento_animale"


            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/textView2"/>
    <TextView
            android:text="@string/Welcome"
            android:layout_width="205dp"
            android:layout_height="45dp"
            android:id="@+id/textView" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textSize="24sp" android:textColor="@android:color/black"
            android:foregroundGravity="center_horizontal" android:gravity="center"/>
    <TextView
            android:layout_width="298dp"
            android:layout_height="51dp"
            android:id="@+id/textView2" app:layout_constraintEnd_toStartOf="@+id/btn_add"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="@+id/btn_add"
            android:gravity="center" android:textSize="18sp"
            tools:text="@string/Add_animal_res" android:textColor="#000000" android:fontFamily="casual"
            android:text="@string/Add_animal_res" app:layout_constraintTop_toTopOf="@+id/btn_add"/>
    <ImageView
            android:src="@drawable/cute_cat_kitten_family_cartoon_doodle_banner_40564_293"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/topbanner" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>